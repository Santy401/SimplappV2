{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./apps/*"
      ],
      "@simplapp/*": [
        "./packages/*/src"
      ],
      "@apps/*": [
        "./apps/*"
      ],
      "@domain/*": [
        "packages/domain/src/*"
      ],
      "@interfaces/*": [
        "packages/interfaces/src/*"
      ],
      "@hooks/*": [
        "packages/interfaces/src/hoooks/*"
      ],
      "@ui/*": [
        "packages/ui/src/*"
      ],
      "@web/*": [
        "./apps/web/app/*"
      ],
    }
  },
  "include": [
    "packages/**/*",
    "apps/**/*"
  ],
  "references": [
    { "path": "./packages/domain" },
    { "path": "./packages/interfaces" },
    { "path": "./packages/ui" }
  ]
}