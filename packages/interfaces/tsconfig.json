{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "rootDir": "../..",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@/*": [
        "apps/web/*"
      ],
      "@domain/*": [
        "../domain/src/*"
      ],
      "@interfaces/*": [
        "./*"
      ],
      "@web/*": [
        "../../../apps/web/app/*"
      ],
      "@ui/*": [
        "../ui/src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../../apps/**/*",
    "../../packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../domain"
    }
  ]
}