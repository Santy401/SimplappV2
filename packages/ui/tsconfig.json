{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@domain/*": ["../../domain/src/*"],
      "@web/*": ["../../apps/web/*"],
      "@interfaces/*": ["../../interfaces/src/*"],
      "@hooks/*": ["../../interfaces/src/hooks/*"],
      "@ui/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.stories.tsx"],
  // "references": [
  //   { "path": "../domain" },
  //   { "path": "../interfaces" }
  // ]
}