{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "rootDir": "../..",
    "baseUrl": "./src",
    "paths": {
      "@domain/*": [
        "./*"
      ],
      "@ui/*": [
        "../../ui/src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../../apps/**/*",
    "../../packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}