generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

/**
 * =========================================
 * üë§ USER & AUTH MODELS
 * =========================================
 */

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String
  password    String
  typeAccount String
  country     String
  company     Company?
  bills       Bill[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshTokens RefreshToken[]
}

model ProductAccounting {
  id Int @id @default(autoincrement())

  productId Int
  companyId Int

  incomeAccount    String
  inventoryAccount String
  costAccount      String

  product Product @relation(fields: [productId], references: [id])
  company Company @relation(fields: [companyId], references: [id])

  @@unique([productId, companyId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

/**
 * =========================================
 * üè¢ COMPANY & ORGANIZATION MODELS
 * =========================================
 */

model Company {
  id Int @id @default(autoincrement())

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  companyName      String           @default("")
  accountId        String?          @default("")
  commercialName   String?          @default("")
  organizationType OrganizationType @default(COMPANY)
  vatCondition     VatCondition     @default(SIMPLIFIED_REGIME)

  identificationNumber String  @default("")
  verificationDigit    String? @default("")

  lastAccountingClose    DateTime?
  economicActivity       String?   @default("")
  industryAndCommerceTax Boolean   @default(false)

  address      String  @default("")
  department   String? @default("")
  municipality String? @default("")
  postalCode   String? @default("")

  phone String? @default("")
  email String? @default("")

  stores   Store[]
  clients  Client[]
  sellers  Seller[]
  products Product[]

  productAccountings ProductAccounting[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  listPrices ListPrice[]
}

/**
 * =========================================
 * ü§ù CLIENTS & SELLERS MODELS
 * =========================================
 */

model Client {
  id Int @id @default(autoincrement())

  organizationType OrganizationType
  firstLastName    String
  secondLastName   String?
  firstName        String
  otherNames       String?
  commercialName   String?
  code             String?

  identificationType   IdentificationType
  identificationNumber String             @unique

  email        String?
  includeCcBcc Boolean @default(false)
  phone        String?

  country      String
  department   String?
  municipality String?
  postalCode   String?
  address      String?

  is_supplier  Boolean @default(false)
  it_branches  Boolean @default(false)
  observations String?

  bills Bill[]

  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Seller {
  id             Int      @id @default(autoincrement())
  name           String
  identification String?
  observation    String?
  companyId      Int?
  company        Company? @relation(fields: [companyId], references: [id])
}

/**
 * =========================================
 * üè¨ STORES & PRODUCTS MODELS
 * =========================================
 */

model Store {
  id          Int     @id @default(autoincrement())
  name        String
  address     String?
  observation String?

  bills Bill[]

  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id])

  inventoryMovements InventoryMovement[]
}

model Product {
  id Int @id @default(autoincrement())

  name        String
  description String?
  reference   String?
  code        String? @unique

  type     ItemType
  category CategoryProduct    @relation(fields: [categoryProductId], references: [id])
  unit     UnitOfMeansureList

  taxRate String

  trackStock         Boolean @default(true)
  allowNegativeStock Boolean @default(false)
  active             Boolean @default(true)

  companyId Int
  company   Company @relation(fields: [companyId], references: [id])

  images      ProductImage[]
  prices      ProductPrice[]
  accountings ProductAccounting[]

  inventoryMovements InventoryMovement[]
  billItems          BillItem[]

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  categoryProductId Int
}

model CategoryProduct {
  id          Int    @id @default(autoincrement())
  name        String
  description String

  products Product[]
}

model ProductImage {
  id  Int    @id @default(autoincrement())
  url String

  productId Int
  product   Product @relation(fields: [productId], references: [id])
}

model InventoryMovement {
  id Int @id @default(autoincrement())

  productId Int
  storeId   Int

  quantity Int
  type     InventoryMovementType

  product Product @relation(fields: [productId], references: [id])
  store   Store   @relation(fields: [storeId], references: [id])

  createdAt DateTime @default(now())
}

model ListPrice {
  id Int @id @default(autoincrement())

  name        String
  type        TypePrice @default(VALOR)
  description String?

  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id])

  prices ProductPrice[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductPrice {
  id Int @id @default(autoincrement())

  productId   Int
  listPriceId Int

  basePrice String
  value     String

  product   Product   @relation(fields: [productId], references: [id])
  listPrice ListPrice @relation(fields: [listPriceId], references: [id])
}

/**
 * =========================================
 * üßæ BILLING MODELS
 * =========================================
 */

model Bill {
  id Int @id @default(autoincrement())

  userId   Int
  clientId Int
  storeId  Int

  user   User   @relation(fields: [userId], references: [id])
  client Client @relation(fields: [clientId], references: [id])
  store  Store  @relation(fields: [storeId], references: [id])

  items BillItem[]

  createdAt DateTime @default(now())
}

model BillItem {
  id Int @id @default(autoincrement())

  billId    Int
  productId Int

  quantity Int

  basePrice String
  taxAmount String
  total     String

  bill    Bill    @relation(fields: [billId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

/**
 * =========================================
 * üß© ENUMS & CONSTANTS
 * =========================================
 */

enum TypePrice {
  VALOR
  PORCENTAJE
}

enum OrganizationType {
  NATURAL_PERSON
  PERSON_JURIDIC
  LEGAL_ENTITY
  COMPANY
}

enum IdentificationType {
  CITIZEN_ID
  NIT
  PASSPORT
  TAX_ID
  FOREIGN_ID
}

enum VatCondition {
  RESPONSABLE
  NO_RESPONSABLE
  EXENTO
  SIMPLIFIED_REGIME
}

enum UnitOfMeansureList {
  UNIDAD
  PAR
  CAJA
  BOTELLA
  CENTIMETRO
  CENTIMETRO_CUADRADO
  METRO_CUADRADO
  PULGADA
  MILILITRO
  LITRO
  GALON
  METRO_CUBICO
  GRAMO
  KILOGRAMO
  TONELADA
  LIBRA
  HORA
  MINUTO
  DIA
}

enum ItemType {
  PRODUCT
  SERVICE
  COMBO
  VARIANT
}

enum InventoryMovementType {
  IN
  OUT
  ADJUSTMENT
}
