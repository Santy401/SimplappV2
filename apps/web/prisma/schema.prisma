generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

/**
 * =========================================
 *  USER & AUTH MODELS
 * =========================================
 */

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String
  password    String
  typeAccount String
  country     String
  company     Company?
  bills       Bill[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshTokens RefreshToken[]
}

model ProductAccounting {
  id Int @id @default(autoincrement())

  productId Int
  companyId Int

  incomeAccount    String
  inventoryAccount String
  costAccount      String

  product Product @relation(fields: [productId], references: [id])
  company Company @relation(fields: [companyId], references: [id])

  @@unique([productId, companyId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

/**
 * =========================================
 *  COMPANY & ORGANIZATION MODELS
 * =========================================
 */

model Company {
  id Int @id @default(autoincrement())

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  companyName      String           @default("")
  logoUrl          String? // URL del logo de la empresa
  accountId        String?          @default("")
  commercialName   String?          @default("")
  organizationType OrganizationType @default(COMPANY)
  vatCondition     VatCondition     @default(SIMPLIFIED_REGIME)

  identificationNumber String  @default("")
  verificationDigit    String? @default("")

  lastAccountingClose    DateTime?
  economicActivity       String?   @default("")
  industryAndCommerceTax Boolean   @default(false)

  address      String  @default("")
  department   String? @default("")
  municipality String? @default("")
  postalCode   String? @default("")

  phone String? @default("")
  email String? @default("")

  stores   Store[]
  clients  Client[]
  sellers  Seller[]
  products Product[]
  bills    Bill[]

  productAccountings ProductAccounting[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  listPrices ListPrice[]
}

/**
 * =========================================
 *  CLIENTS & SELLERS MODELS
 * =========================================
 */

model Client {
  id Int @id @default(autoincrement())

  organizationType OrganizationType
  firstLastName    String
  secondLastName   String?
  firstName        String
  otherNames       String?
  commercialName   String?
  code             String?

  identificationType   IdentificationType
  identificationNumber String             @unique

  email        String?
  includeCcBcc Boolean @default(false)
  phone        String?

  country      String
  department   String?
  municipality String?
  postalCode   String?
  address      String?

  is_supplier  Boolean @default(false)
  it_branches  Boolean @default(false)
  observations String?

  bills Bill[]

  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Seller {
  id             Int      @id @default(autoincrement())
  name           String
  identification String?
  observation    String?
  companyId      Int?
  company        Company? @relation(fields: [companyId], references: [id])
}

/**
 * =========================================
 *  STORES & PRODUCTS MODELS
 * =========================================
 */

model Store {
  id          Int     @id @default(autoincrement())
  name        String
  address     String?
  observation String?

  bills Bill[]

  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id])

  inventoryMovements InventoryMovement[]
}

model Product {
  id Int @id @default(autoincrement())

  name        String
  description String?
  reference   String?
  code        String? @unique

  type     ItemType
  category CategoryProduct    @relation(fields: [categoryProductId], references: [id])
  unit     UnitOfMeansureList

  taxRate String

  cost       String?
  basePrice  String?
  finalPrice String?

  trackStock         Boolean @default(true)
  allowNegativeStock Boolean @default(false)
  active             Boolean @default(true)

  companyId Int
  company   Company @relation(fields: [companyId], references: [id])

  images      ProductImage[]
  prices      ProductPrice[]
  accountings ProductAccounting[]

  inventoryMovements InventoryMovement[]
  billItems          BillItem[]

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  categoryProductId Int
}

model CategoryProduct {
  id          Int    @id @default(autoincrement())
  name        String
  description String

  products Product[]
}

model ProductImage {
  id  Int    @id @default(autoincrement())
  url String

  productId Int
  product   Product @relation(fields: [productId], references: [id])
}

model InventoryMovement {
  id Int @id @default(autoincrement())

  productId Int
  storeId   Int

  quantity Int
  type     InventoryMovementType

  product Product @relation(fields: [productId], references: [id])
  store   Store   @relation(fields: [storeId], references: [id])

  createdAt DateTime @default(now())
}

model ListPrice {
  id Int @id @default(autoincrement())

  name        String
  type        TypePrice @default(VALOR)
  description String?

  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id])

  prices ProductPrice[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductPrice {
  id Int @id @default(autoincrement())

  productId   Int
  listPriceId Int

  basePrice String
  value     String

  product   Product   @relation(fields: [productId], references: [id])
  listPrice ListPrice @relation(fields: [listPriceId], references: [id])
}

/**
 * =========================================
 * Ь BILLING MODELS
 * =========================================
 */

model Bill {
  id          Int     @id @default(autoincrement())
  // Relaciones
  userId      Int
  clientId    Int
  storeId     Int
  // Opci贸n: Vincular directamente a Company para queries m谩s r谩pidas
  companyId   Int
  user        User    @relation(fields: [userId], references: [id])
  client      Client  @relation(fields: [clientId], references: [id])
  store       Store   @relation(fields: [storeId], references: [id])
  company     Company @relation(fields: [companyId], references: [id])
  // --- 1. Control Legal y Numeraci贸n ---
  prefix      String? @default("") // Ejemplo: "SETT"
  number      Int // El consecutivo fiscal visible (ej: 1001)
  legalNumber String? // Concatenaci贸n o c贸digo completo (ej: "SETT-1001")

  // --- 2. Estados y Fechas ---
  status        BillStatus    @default(DRAFT)
  paymentMethod PaymentMethod @default(CASH)

  date    DateTime @default(now()) // Fecha de emisi贸n
  dueDate DateTime // Fecha de vencimiento (clave para cartera)

  // --- 3. Totales (C谩lculos guardados) ---
  // Usamos String o Decimal. Manteniendo tu est谩ndar de String:
  subtotal             String     @default("0")
  taxTotal             String     @default("0")
  discountTotal        String     @default("0")
  total                String     @default("0")
  balance              String     @default("0") // Lo que falta por pagar
  // --- 4. Snapshot (Datos del cliente al momento de facturar) ---
  // Importante por si el cliente cambia datos en el futuro
  clientName           String?
  clientIdentification String?
  clientAddress        String?
  clientPhone          String?
  clientEmail          String?
  items                BillItem[]
  payments             Payment[] // Relaci贸n nueva sugerida para abonos
  notes                String? // Observaciones de la factura
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt

  @@unique([companyId, prefix, number]) // Evitar duplicar n煤meros en una misma empresa
}

model Payment {
  id Int @id @default(autoincrement())

  billId Int
  bill   Bill @relation(fields: [billId], references: [id])

  amount String
  method PaymentMethod
  date   DateTime      @default(now())
}

model BillItem {
  id        Int @id @default(autoincrement())
  billId    Int
  productId Int
  quantity  Int // O Decimal/Float si vendes por peso (kg)

  // Precios Unitarios
  price String // Precio unitario base

  // Impuestos y Descuentos del Item
  taxRate   String @default("0") // Ej: "19.00"
  taxAmount String @default("0") // El valor monetario del impuesto
  discount  String @default("0")
  // Total de la l铆nea
  total     String

  // Snapshot del producto por si cambia de nombre/c贸digo
  productName String?
  productCode String?
  bill        Bill    @relation(fields: [billId], references: [id], onDelete: Cascade)
  product     Product @relation(fields: [productId], references: [id])
}

/**
 * =========================================
 * З ENUMS & CONSTANTS
 * =========================================
 */

enum TypePrice {
  VALOR
  PORCENTAJE
}

enum OrganizationType {
  NATURAL_PERSON
  PERSON_JURIDIC
  LEGAL_ENTITY
  COMPANY
}

enum IdentificationType {
  CITIZEN_ID
  NIT
  PASSPORT
  TAX_ID
  FOREIGN_ID
}

enum VatCondition {
  RESPONSABLE
  NO_RESPONSABLE
  EXENTO
  SIMPLIFIED_REGIME
}

enum UnitOfMeansureList {
  UNIDAD
  PAR
  CAJA
  BOTELLA
  CENTIMETRO
  CENTIMETRO_CUADRADO
  METRO_CUADRADO
  PULGADA
  MILILITRO
  LITRO
  GALON
  METRO_CUBICO
  GRAMO
  KILOGRAMO
  TONELADA
  LIBRA
  HORA
  MINUTO
  DIA
}

enum ItemType {
  PRODUCT
  SERVICE
  COMBO
  VARIANT
}

enum InventoryMovementType {
  IN
  OUT
  ADJUSTMENT
}

enum BillStatus {
  DRAFT // Borrador, no afecta inventario ni contabilidad
  ISSUED // Emitida/Validada
  PAID // Pagada totalmente
  PARTIALLY_PAID
  CANCELLED // Anulada (Nota cr茅dito)
}

enum PaymentMethod {
  UNDEFINED
  CASH
  CREDIT_CARD
  DEBIT_CARD
  TRANSFER
  CHECK
  DEPOSIT
  OTHER
  CREDIT // Venta a cr茅dito
}
