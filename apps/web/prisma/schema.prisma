generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

/**
 * =========================================
 * üë§ USER & AUTH MODELS
 * =========================================
 */

model User {
  id          String      @id @default(uuid())
  email       String   @unique
  name        String
  password    String
  typeAccount String
  country     String
  company     Company?
  bills       Bill[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshTokens RefreshToken[]
}

model ProductAccounting {
  id String @id @default(uuid())

  productId String
  companyId String

  incomeAccount    String
  inventoryAccount String
  costAccount      String

  product Product @relation(fields: [productId], references: [id])
  company Company @relation(fields: [companyId], references: [id])

  @@unique([productId, companyId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

/**
 * =========================================
 * üè¢ COMPANY & ORGANIZATION MODELS
 * =========================================
 */

model Company {
  id String @id @default(uuid())

  userId String  @unique
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  companyName      String           @default("")
  logoUrl          String? // URL del logo de la empresa
  accountId        String?          @default("")
  commercialName   String?          @default("")
  organizationType OrganizationType @default(COMPANY)
  vatCondition     VatCondition     @default(SIMPLIFIED_REGIME)

  identificationNumber String  @default("")
  verificationDigit    String? @default("")

  lastAccountingClose    DateTime?
  economicActivity       String?   @default("")
  industryAndCommerceTax Boolean   @default(false)

  address      String  @default("")
  department   String? @default("")
  municipality String? @default("")
  postalCode   String? @default("")

  phone String? @default("")
  email String? @default("")

  stores   Store[]
  clients  Client[]
  sellers  Seller[]
  products Product[]
  bills    Bill[]

  productAccountings ProductAccounting[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  listPrices ListPrice[]
}

/**
 * =========================================
 * ü§ù CLIENTS & SELLERS MODELS
 * =========================================
 */

model Client {
  id String @id @default(uuid())

  organizationType OrganizationType
  firstLastName    String
  secondLastName   String?
  firstName        String
  otherNames       String?
  commercialName   String?
  code             String?

  identificationType   IdentificationType
  identificationNumber String


  email        String?
  includeCcBcc Boolean @default(false)
  phone        String?

  country      String
  department   String?
  municipality String?
  postalCode   String?
  address      String?

  is_supplier  Boolean @default(false)
  it_branches  Boolean @default(false)
  observations String?

  bills Bill[]

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([companyId, identificationNumber])
}

model Seller {
  id             String      @id @default(uuid())
  name           String
  identification String?
  observation    String?
  companyId      String?
  company        Company? @relation(fields: [companyId], references: [id])
}

/**
 * =========================================
 * üè¨ STORES & PRODUCTS MODELS
 * =========================================
 */

model Store {
  id          String     @id @default(uuid())
  name        String
  address     String?
  observation String?

  bills Bill[]

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  inventoryMovements InventoryMovement[]
}

model Product {
  id String @id @default(uuid())

  name        String
  description String?
  reference   String?
  code        String? @unique

  type     ItemType
  category CategoryProduct    @relation(fields: [categoryProductId], references: [id])
  unit     UnitOfMeansureList

  taxRate String

  cost       String?
  basePrice  String?
  finalPrice String?

  trackStock         Boolean @default(true)
  allowNegativeStock Boolean @default(false)
  active             Boolean @default(true)

  companyId String
  company   Company @relation(fields: [companyId], references: [id])

  images      ProductImage[]
  prices      ProductPrice[]
  accountings ProductAccounting[]

  inventoryMovements InventoryMovement[]
  billItems          BillItem[]

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  categoryProductId String
}

model CategoryProduct {
  id          String    @id @default(uuid())
  name        String
  description String

  products Product[]
}

model ProductImage {
  id  String    @id @default(uuid())
  url String

  productId String
  product   Product @relation(fields: [productId], references: [id])
}

model InventoryMovement {
  id String @id @default(uuid())

  productId String
  storeId   String

  quantity Int
  type     InventoryMovementType

  product Product @relation(fields: [productId], references: [id])
  store   Store   @relation(fields: [storeId], references: [id])

  createdAt DateTime @default(now())
}

model ListPrice {
  id String @id @default(uuid())

  name        String
  type        TypePrice @default(VALOR)
  description String?
  percentage  String?

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  prices ProductPrice[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductPrice {
  id String @id @default(uuid())

  productId   String
  listPriceId String

  basePrice String
  value     String

  product   Product   @relation(fields: [productId], references: [id])
  listPrice ListPrice @relation(fields: [listPriceId], references: [id])
}

/**
 * =========================================
 * üßæ BILLING MODELS
 * =========================================
 */

model Bill {
  id          String     @id @default(uuid())
  userId      String
  clientId    String
  storeId     String
  listPriceId String? 
  sellerId    String? 
  companyId   String
  user        User    @relation(fields: [userId], references: [id])
  client      Client  @relation(fields: [clientId], references: [id])
  store       Store   @relation(fields: [storeId], references: [id])
  company     Company @relation(fields: [companyId], references: [id])
  // --- 1. Control Legal y Numeraci√≥n ---
  prefix      String? @default("") // Ejemplo: "SETT"
  number      Int 
  legalNumber String?

  // --- 2. Estados y Fechas ---
  status        BillStatus    @default(DRAFT)
  paymentMethod PaymentMethod @default(CASH)

  date    DateTime @default(now())
  dueDate DateTime 

  // --- 3. Totales (C√°lculos guardados) ---
  subtotal             String     @default("0")
  taxTotal             String     @default("0")
  discountTotal        String     @default("0")
  total                String     @default("0")
  balance              String     @default("0")
  // --- 4. Snapshot (Datos del cliente al momento de facturar) ---
  clientName           String?
  clientIdentification String?
  clientAddress        String?
  clientPhone          String?
  clientEmail          String?
  items                BillItem[]
  payments             Payment[] 
  notes                String?
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt

  @@unique([companyId, prefix, number])
}

model Payment {
  id String @id @default(uuid())

  billId String
  bill   Bill @relation(fields: [billId], references: [id])

  amount String
  method PaymentMethod
  date   DateTime      @default(now())
}

model BillItem {
  id        String @id @default(uuid())
  billId    String
  productId String
  quantity  Int

  price String 

  taxRate   String @default("0") 
  taxAmount String @default("0") 
  discount  String @default("0")
  total     String

  productName String?
  productCode String?
  bill        Bill    @relation(fields: [billId], references: [id], onDelete: Cascade)
  product     Product @relation(fields: [productId], references: [id])
}

/**
 * =========================================
 * üß© ENUMS & CONSTANTS
 * =========================================
 */

enum TypePrice {
  VALOR
  PORCENTAJE
}

enum OrganizationType {
  NATURAL_PERSON
  PERSON_JURIDIC
  LEGAL_ENTITY
  COMPANY
}

enum IdentificationType {
  CITIZEN_ID
  NIT
  PASSPORT
  TAX_ID
  FOREIGN_ID
}

enum VatCondition {
  RESPONSABLE
  NO_RESPONSABLE
  EXENTO
  SIMPLIFIED_REGIME
}

enum UnitOfMeansureList {
  UNIDAD
  PAR
  CAJA
  BOTELLA
  CENTIMETRO
  CENTIMETRO_CUADRADO
  METRO_CUADRADO
  PULGADA
  MILILITRO
  LITRO
  GALON
  METRO_CUBICO
  GRAMO
  KILOGRAMO
  TONELADA
  LIBRA
  HORA
  MINUTO
  DIA
}

enum ItemType {
  PRODUCT
  SERVICE
  COMBO
  VARIANT
}

enum InventoryMovementType {
  IN
  OUT
  ADJUSTMENT
}

enum BillStatus {
  DRAFT
  ISSUED 
  PAID 
  PARTIALLY_PAID
  CANCELLED
  TO_PAY 
}

enum PaymentMethod {
  UNDEFINED
  CASH
  CREDIT_CARD
  DEBIT_CARD
  TRANSFER
  CHECK
  DEPOSIT
  OTHER
  CREDIT 
}
