generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String
  password    String
  typeAccount String
  country     String
  company     Company?
  bills       Bill[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshTokens RefreshToken[]
}

model Company {
  id Int @id @default(autoincrement())

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  companyName      String           @default("")
  accountId        String?          @default("")
  commercialName   String?          @default("")
  organizationType OrganizationType @default(COMPANY)
  vatCondition     VatCondition     @default(SIMPLIFIED_REGIME)

  identificationNumber String  @default("")
  verificationDigit    String? @default("")

  lastAccountingClose    DateTime?
  economicActivity       String?   @default("")
  industryAndCommerceTax Boolean   @default(false)

  address      String  @default("")
  department   String? @default("")
  municipality String? @default("")
  postalCode   String? @default("")

  phone String? @default("")
  email String? @default("")

  stores   Store[]
  clients  Client[]
  sellers  Seller[]
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  listPrices ListPrice[]
}

model Client {
  id Int @id @default(autoincrement())

  organizationType OrganizationType
  firstLastName    String
  secondLastName   String?
  firstName        String
  otherNames       String?
  commercialName   String?
  code             String?

  identificationType   IdentificationType
  identificationNumber String             @unique

  email        String?
  includeCcBcc Boolean @default(false)
  phone        String?

  country      String
  department   String?
  municipality String?
  postalCode   String?
  address      String?

  is_supplier  Boolean @default(false)
  it_branches  Boolean @default(false)
  observations String?

  bills Bill[]

  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Seller {
  id             Int      @id @default(autoincrement())
  name           String
  identification String?
  observation    String?
  companyId      Int?
  company        Company? @relation(fields: [companyId], references: [id])
}

model Store {
  id          Int     @id @default(autoincrement())
  name        String
  address     String?
  observation String?

  bills Bill[]
  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id])
}

model Product {
  id          Int             @id @default(autoincrement())
  name        String
  code        String?
  codeBarrers String?
  category    CategoryProduct @default(VENTA_DE_SERVICIOS)

  goodExcluded   Boolean            @default(false)
  rateIva        String
  UnitOfMeansure UnitOfMeansureList @default(UNIDAD)
  observation    String
  active         Boolean            @default(true)

  bills Bill[]

  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id])
}

model ListPrice {
  id            Int @id @default(autoincrement())
  name          String
  type          TypePrice @default(VALOR)
  percentage    String?
  description   String?
  
  companyId     Int?
  company       Company? @relation(fields: [companyId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Bill {
  id Int @id @default(autoincrement())

  userId    Int
  clientId  Int
  productId Int
  storeId   Int

  user    User    @relation(fields: [userId], references: [id])
  client  Client  @relation(fields: [clientId], references: [id])
  product Product @relation(fields: [productId], references: [id])
  stores  Store  @relation(fields: [storeId], references: [id])

  quantity  Int
  createdAt DateTime @default(now())
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

enum TypePrice {
  VALOR
  PORCENTAJE
}

enum OrganizationType {
  NATURAL_PERSON
  PERSON_JURIDIC
  LEGAL_ENTITY
  COMPANY
}

enum IdentificationType {
  CITIZEN_ID
  NIT
  PASSPORT
  TAX_ID
  FOREIGN_ID
}

enum VatCondition {
  RESPONSABLE
  NO_RESPONSABLE
  EXENTO
  SIMPLIFIED_REGIME
}

enum UnitOfMeansureList {
  UNIDAD
  PAR
  CAJA
  BOTELLA
  CENTIMETRO
  CENTIMETRO_CUADRADO
  METRO_CUADRADO
  PULGADA
  MILILITRO
  LITRO
  GALON
  METRO_CUBICO
  GRAMO
  KILOGRAMO
  TONELADA
  LIBRA
  HORA
  MINUTO
  DIA
}

enum CategoryProduct {
  VENTA_DE_SERVICIOS
  VENTA_DE_VIENES_Y_CAMBIO
  VENTA_DE_PROPIEDAD_PLANTA_Y_EQUIPO
}